@model IEnumerable<Exam06.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<form asp-controller="Categories" asp-action="Index">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search Name"
               name="SearchString" value="@ViewData["CurrentSearch"]" />
        <button type="submit" class="btn btn-outline-dark" aria-label="Search">
            <i class="fa fa-search"></i>
        </button>
    </div>
</form>
<br>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr class="table-primary">
            <th>
                <a class="text-white" asp-route-sortOrder="@ViewData["IdSort"]">
                    @Html.DisplayName("Id") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-white" asp-route-sortOrder="@ViewData["NameSort"]">
                    @Html.DisplayName("Name") <i class="fa fa-sort"></i>
                </a>
            </th>   
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Id)
                    </a>
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
}
    </tbody>
</table>
