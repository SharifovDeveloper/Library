@model IEnumerable<Exam06.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Authors</h1>

<form asp-controller="Authors" asp-action="Index">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search FullName"
               name="SearchString" value="@ViewData["CurrentSearch"]" />
        <button type="submit" class="btn btn-outline-dark" aria-label="Search">
            <i class="fa fa-search"></i>
        </button>
    </div>
</form>
<br />

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr class="table-primary">
            <th>
                <a class="text-white" asp-route-sortorder="@ViewData["IdSort"]">
                    @Html.DisplayName("Id") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-white" asp-route-sortorder="@ViewData["FullNameSort"]">
                    @Html.DisplayName("Full Name") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-white" asp-route-sortorder="@ViewData["BirhtDateSort"]">
                    @Html.DisplayName("BirthDate") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Id)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
            </tr>
        }
    </tbody>
</table>